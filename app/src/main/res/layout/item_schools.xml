<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="model"
            type="com.nycschools.a20220131_michealadeniyi_nycschools.data.model.SchoolModel" />
    </data>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="#f7f7f7">
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/layout"
            android:background="#f7f7f7"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:padding="8dp"

            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/iv_school"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_school"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/theme_700"
                    android:text="@{model.schoolName}"
                    android:textSize="12sp"
                    fontPath="fonts/OpenSans-Bold.ttf"
                    tools:text="title"
                    android:lines="1"
                    android:ellipsize="end"
                    android:padding="5dp"
                    app:layout_constraintLeft_toRightOf="@id/iv_school"
                    app:layout_constraintTop_toTopOf="parent"
                    />
            </LinearLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                >
                <ImageView
                    android:id="@+id/iv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_address"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/theme_700"
                    android:text="@{model.address}"
                    android:textSize="12sp"
                    fontPath="fonts/OpenSans-Bold.ttf"
                    tools:text="address"
                    android:lines="1"
                    android:ellipsize="end"
                    android:padding="5dp"
                    app:layout_constraintLeft_toRightOf="@id/iv_address"
                    app:layout_constraintTop_toTopOf="parent"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/theme_700"
                    android:text="@{model.city}"
                    android:textSize="12sp"
                    fontPath="fonts/OpenSans-Bold.ttf"
                    tools:text="city "
                    android:lines="1"
                    android:ellipsize="end"
                    android:padding="5dp"
                    app:layout_constraintLeft_toRightOf="@id/tv_address"
                    app:layout_constraintTop_toTopOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal"
                android:baselineAligned="false">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                        <ImageView
                            android:id="@+id/iv_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_phone"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            />
                        <TextView
                            android:id="@+id/tv_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/theme_700"
                            android:text="@{model.phoneNumber}"
                            android:textSize="12sp"
                            fontPath="fonts/OpenSans-Bold.ttf"
                            tools:text="phone number"
                            android:lines="1"
                            android:ellipsize="end"
                            android:padding="5dp"
                            app:layout_constraintLeft_toRightOf="@id/iv_phone"
                            app:layout_constraintTop_toTopOf="parent"
                            />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_email"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/theme_700"
                            android:text="@{model.email}"
                            android:textSize="12sp"
                            android:gravity="center_vertical"
                            android:layout_gravity="center_vertical"
                            fontPath="fonts/OpenSans-Bold.ttf"
                            android:lines="1"
                            tools:text="email"
                            android:ellipsize="end"
                            android:padding="5dp"
                            />

                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="3"
                android:ellipsize="end"
                android:text="@{model.overviewParagraph}"
                android:textSize="12sp"
                android:padding="4dp"
                tools:text="overview"
                android:textColor="@color/theme_700"
                fontPath="fonts/OpenSans-Light.ttf"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</layout>
